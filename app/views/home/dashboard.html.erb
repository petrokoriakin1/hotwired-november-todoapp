<h1 class="text-4xl font-bold text-gray-900 mb-8">Dashboard</h1>
<h2 class="text-2xl font-semibold text-gray-700 mb-4">Task Lists</h2>
<ul class="list-inside list-disc mb-6">
  <% @tasklists.each do |tasklist| %>
    <li class="mb-2">
      <strong><%= link_to tasklist.title, list_path(tasklist), class: "text-indigo-600 hover:text-indigo-800 transition-colors" %></strong>
    </li>
    <p><%= tasklist.description %></p>
  <% end %>
</ul>
<h2 class="text-2xl font-semibold text-gray-700 mb-4">Templates</h2>
<ul class="list-inside list-disc mb-6">
  <% @templates.each do |template| %>
    <li class="mb-2">
      <%= template.title %>
    </li>
    <p><%= template.description %></p>
  <% end %>
</ul>
